{
  "name": "six-cities",
  "version": "5.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.js",
    "start:dev": "nodemon --watch src --ext ts --exec \"ts-node ./src/main.rest.ts\" | pino-pretty --colorize --translateTime SYS:standart",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "start:mock-api": "npx json-server ./mocks/mock-server-data.json --port 8000"
  },
  "devDependencies": {
    "@types/convict-format-with-validator": "^6.0.6",
    "@types/express": "^4.17.18",
    "@types/mime-types": "^2.1.2",
    "@types/multer": "^1.4.8",
    "@types/node": "18.17.17",
    "@types/pino": "^7.0.5",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "nodemon": "^3.0.1",
    "pino-pretty": "^10.3.1",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "tslib": "^2.8.1",
    "typescript": "5.2.2"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "@typegoose/typegoose": "^11.5.0",
    "@types/cors": "^2.8.15",
    "axios": "^1.13.2",
    "chalk": "^5.6.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "http-status-codes": "^2.3.0",
    "inversify": "^6.0.1",
    "jose": "^4.15.4",
    "json-server": "^0.17.3",
    "mime-types": "^2.1.35",
    "mongoose": "^7.5.3",
    "multer": "^1.4.5-lts.1",
    "pino": "^8.15.1",
    "reflect-metadata": "^0.2.2"
  }
}
